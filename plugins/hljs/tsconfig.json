{
    "compilerOptions": {
        "outDir": "build",
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "skipLibCheck": true,
        "types": [
            "node"
        ],
        "lib": [
            "dom",
            "es2018"
        ]
    },
    "exclude": [
        "**/*.spec.ts"
    ]
}